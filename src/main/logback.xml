<configuration>
    <!-- Console Appender: Outputs log messages to the console/terminal -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <!-- Encoder defines how log messages are formatted -->
        <encoder>
            <!-- Pattern for console output: time (HH:mm:ss), log level, logger name, and message -->
            <!-- %d{HH:mm:ss} = timestamp in hours:minutes:seconds format -->
            <!-- %-5level = log level (DEBUG, INFO, WARN, ERROR) left-aligned in 5 characters -->
            <!-- [%logger] = logger name in square brackets -->
            <!-- %msg = the actual log message -->
            <!-- %n = newline character -->
            <pattern>%d{HH:mm:ss} %-5level [%logger] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender: Outputs log messages to a file -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <!-- Specifies the file path where logs will be written -->
        <!-- Creates ’logs’ directory if it does not exist -->
        <file>logs/application.log</file>
        <encoder>
            <!-- Pattern for file output: includes full date/time for better tracking -->
            <!-- %d{yyyy-MM-dd HH:mm:ss} = full timestamp with date and time -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%logger] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger configuration: applies to all loggers unless overridden -->
    <!-- level="debug" means all log levels (DEBUG, INFO, WARN, ERROR) will be captured -->
    <root level="debug">
        <!-- References both appenders, so logs go to both console AND file -->
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>
</configuration>